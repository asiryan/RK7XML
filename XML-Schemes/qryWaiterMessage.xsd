<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:include schemaLocation="common.xsd"/>
  <xs:include schemaLocation="messages.xsd"/>
   
  <xs:element name="RK7Query">
    <xs:annotation>
      <xs:documentation xml:lang="ru">[Касса, Кассовый сервер] Отправка сообщения официанту</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:all>
        <xs:element name="RK7CMD">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Station" type="refItem" minOccurs="0">
                <xs:annotation>
                  <xs:documentation xml:lang="ru">Станция, на которой должно быть показано сообщение</xs:documentation>
                </xs:annotation>
              </xs:element>
              <xs:element name="Waiter" type="refItem" minOccurs="0">
                <xs:annotation>
                  <xs:documentation xml:lang="ru">Официант</xs:documentation>
                </xs:annotation>
              </xs:element>
              <xs:element name="Manager" type="refItem" minOccurs="0">
                <xs:annotation>
                  <xs:documentation xml:lang="ru">Менеджер</xs:documentation>
                </xs:annotation>
              </xs:element>
              <xs:element name="Order" type="orderElement" minOccurs="0">
                <xs:annotation>
                  <xs:documentation xml:lang="ru">Заказ (сообщение будет показано только если открыт этот заказ)</xs:documentation>
                </xs:annotation>
              </xs:element>
              <xs:element name="Buttons" type="messageButtons" minOccurs="0" maxOccurs="1">
                <xs:annotation>
                  <xs:documentation xml:lang="ru">Список кнопок для сообщения</xs:documentation>
                </xs:annotation>
              </xs:element>
            </xs:sequence>
            <xs:attribute name="CMD" fixed="WaiterMessage"/>
            <xs:attribute name="external_id" type="ExternalIDString" use="optional" default="">
              <xs:annotation>
                <xs:documentation xml:lang="ru">Внешний идентификатор сообщения (строка)</xs:documentation>
              </xs:annotation>
            </xs:attribute>
            <xs:attribute name="text" type="xs:normalizedString" use="required">
              <xs:annotation>
                <xs:documentation xml:lang="ru">Сообщение</xs:documentation>
              </xs:annotation>
            </xs:attribute>
            <xs:attribute name="expireTime" type="xs:dateTime">
              <xs:annotation>
                <xs:documentation xml:lang="ru">Время жизни сообщения</xs:documentation>
              </xs:annotation>
            </xs:attribute>
            <xs:attribute name="messageType" type="messageType" use="required">
              <xs:annotation>
                <xs:documentation xml:lang="ru">Тип сообщения</xs:documentation>
              </xs:annotation>
            </xs:attribute>
            <xs:attribute name="param" type="xs:integer">
              <xs:annotation>
                <xs:documentation xml:lang="ru">Параметр сообщения</xs:documentation>
              </xs:annotation>
            </xs:attribute>
          </xs:complexType>
        </xs:element>
      </xs:all>
    </xs:complexType>
  </xs:element>
</xs:schema>
